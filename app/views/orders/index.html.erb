<div class="container index-container">
  <div class="row justify-content-center">
    <div class="col-sm-12">
      <h2>Orders to be shipped</h2>
      <% @orders.each do |order| %>
        <%= link_to order_path(order) do %>
          <div class="row justify-content-center">
            <div class="col-12 col-md-8">
              <div id="small-card" class="row">
                <div class="card-product">
                  <div class="order-weight">
                  <h3><%= order.name %></h3>
                  <p><%= order.items.map{|x| x.weight}.inject(0){|sum,x| sum + x }/1000.to_f.round(1) %>kg</p>
                  </div>
                  <div class="card-product-infos">
                    <p><strong>Mar 19, 2021</strong></p>
                    <p><%= Time.now.strftime("%H:%M") %></p>
                    <% if order.packed %>
                      <div class="d-flex" style="width: 55px; justify-content: space-between;">
                        <p>âœ”</p>
                        <p>Packed</p>
                      </div>
                    <% else %>
                      <p> Not Packed</p>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
      <div class="bottom-button">
        <h2>New Order</h2>
      </div>
    </div>
  </div>
</div>
